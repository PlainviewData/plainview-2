<script src="/javascripts/new-block.js"></script>

<div class="container">
  <form method="POST" action="/blocks"">
    
    <div class="form-group row">
      <label for="argumentTitle" class="col-sm-2 col-form-label">Argument title</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="argumentTitle" data-toggle="popover" data-trigger="focus" data-content="Make a clear, specfic claim that you will defend." placeholder="Argument title">
      </div>
    </div>
    
    <div class="form-group row">
      <label for="tagsTitle" class="col-sm-2 col-form-label">Tags</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="tagsTitle">
	       <p id="tagsHelp" class="form-text text-muted">
			Seperate tags by spaces.
		  </p>
      </div>
    </div>

    <div class="form-group row">
      <label for="blockText" class="col-sm-2 col-form-label">Argument</label>
      <textarea class="form-control" id="blockText" rows="10"></textarea>
    </div>
    <fieldset class="form-group row">
      <legend class="col-form-legend col-sm-2">Visibility</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="visibilityRadio" id="public" value="public" checked>
            Public
          </label>
	        <p id="publicHelp" class="form-text text-muted">
			  Anyone will be able to see your argument and make comments, but only those you invite will be able to make official responses.
			</p>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="visibilityRadio" id="private" value="prviate">
            Private
          </label>
          <p id="publicHelp" class="form-text text-muted">
			  Only you and the people you invite will be able to see, comment, and make official responses.
		   </p>
        </div>
      </div>
    </fieldset>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>