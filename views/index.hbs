<div class="bg"></div>
<div class="jumbotron">
	<div class="container">
		<h2 class="display-3" id="welcome">Welcome to Plainview!</h2>
		<form action="/search" method="GET">
			<input class="typeahead form-control" type="text" placeholder="Search discussions, responses, and tags" id="front-search" name="response_query">
			<hr class="my-2" style="clear: both; visibility: hidden;">
			<p class="lead">
				<a href="/about" id="jumbotron-link">Learn more</a>
			</p>
			<input type="submit" class="hidden_submit">
		</form>
	</div>
</div>
<div class="container">
	<div class="row">
		<h3>Newest Responses</h3>
	</div>
	<div class="row">
		<div class="col-md-9">
			{{#each responses}}
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail responseTile">
						<div class="caption">
							<div class="pull-right dropdown">
								<a href="#" data-toggle="dropdown" class="dropdown-toggle"><span class="glyphicon glyphicon-option-vertical responseTileDropdown"></span></a>
								<ul class="dropdown-menu dropdown-menu-right">
									<li><a href="../responses/id/{{this._id}}">View information</a></li>
									<li class="clipboardDropdown" data-clipboard-text="{{this._id}}" style="cursor: hand"><a>Copy reference id</a></li>
									<li><a href="../discussions/id/{{this.original_discussion}}">Go to original discussion</a></li>
								</ul>
							</div>
							<h5 class="responseSampleTitle"><b>{{this.title}}</b></h5>
							<h7 style="font-size: 12px;"><a href="users/id/{{this.created_by}}">{{this.signature}}</a></h7>
							</br>
							<p style="
								display: block;
								display: -webkit-box;
								max-width: 100%;
								height: 14px*1.5*3;
								margin: 0 auto;
								font-size: 14px;
								line-height: 1.5;
								-webkit-line-clamp: 5;
								-webkit-box-orient: vertical;
								overflow: hidden;
								text-overflow: ellipsis;">{{this.text}}</p>
							</div>
					</div>
				</div>
			{{/each}}
		</div>
		<div class="col-md-3">
			Top tags
			<div class="list-group">
				{{#each tags}}
					{{#if this.label}}
						<h5 class="list-group-item-heading"><a href="/tags/{{this.label}}" class="list-group-item list-group-item-action">{{this.label}} - {{this.discussions_using}} discussions</a></h5>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
</div>
